#progress {
  width: ${x.app.width};
  height: 4px;
  background-color: ${x.fn.color(x.color.rose1).mix(x.fn.color(x.color.background), 0.5)};
  transform: translateX(-100%);
  transition: transform 0.3s ease-out;
  will-change: transform;
}

#controls {
  display: flex;
  align-items: center;
  margin: 0.5rem 0.5rem 0;
}

#play {
  width: 10rem;
  margin-left: 0.5rem;
}

#word {
  position: relative;
  left: 50%;
  display: flex;
  align-items: center;
  height: 134px;
  font-family: ${x.fontStack};
  font-size: 48px;
  white-space: nowrap;
}

#focus {
  position: absolute;
  top: 74px;
  // stylelint-disable-next-line function-name-case
  left: ${Number.parseInt(x.app.width) / 2 - 2}px;
  width: 4px;
  height: 92px;
  background:
    linear-gradient(
      to bottom,
      ${x.color.rose1} 0%,
      ${x.color.background} 38%,
      ${x.color.background} 62%,
      ${x.color.rose1} 100%
    );
  opacity: 0;
  transition: opacity 0.3s;
  will-change: opacity;

  &.show {
    opacity: 1;
    transition: opacity 1s;
  }
}

.summary {
  width: 100%;
  font-size: 26px;
  white-space: initial; // allow long error text to wrap
  opacity: 0;
  transition: opacity 0.8s;

  & > em {
    font-size: 48px;
  }
}
