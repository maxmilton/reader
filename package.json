{
  "name": "reader",
  "version": "0.1.4",
  "description": "Web page speed reader browser extension",
  "repository": "maxmilton/reader",
  "homepage": "https://github.com/maxmilton/reader",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf dist; cp -r static dist",
    "test": "c8 --all --include=src --include=manifest.config.mjs --reporter=text --reporter=lcovonly uvu -r tsm -r \"$PWD\"/test/setup.ts test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts",
    "zip": "sh -c 'test -z \"$(git status --porcelain)\"' && pnpm run lint && pnpm run test && pnpm run build && cd dist && zip ../chrome-extension.zip *"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.43",
    "html5parser": "2.0.2",
    "stage1": "0.6.2",
    "trackx": "0.6.0"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.10",
    "@types/chrome": "0.0.205",
    "@types/node": "18.11.17",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "c8": "7.12.0",
    "ekscss": "0.0.13",
    "esbuild": "0.16.10",
    "esbuild-minify-templates": "0.9.3",
    "esbuild-plugin-ekscss": "0.0.13",
    "eslint": "8.29.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-unicorn": "45.0.2",
    "git-ref": "0.3.1",
    "happy-dom": "8.1.0",
    "kleur": "4.1.5",
    "lightningcss": "1.17.1",
    "nanospy": "0.5.0",
    "pirates": "4.0.5",
    "playwright-chromium": "1.29.1",
    "prettier": "2.8.1",
    "prettier-plugin-pkg": "0.17.1",
    "prettier-plugin-sh": "0.12.8",
    "purgecss": "5.0.0",
    "stylelint": "14.16.0",
    "stylelint-config-standard": "29.0.0",
    "tsm": "2.3.0",
    "typescript": "4.9.4",
    "uvu": "0.5.6"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "pluginSearchDirs": [
      "."
    ],
    "overrides": [
      {
        "files": [
          "*.test.ts"
        ],
        "options": {
          "printWidth": 100
        }
      }
    ]
  },
  "stylelint": {
    "reportInvalidScopeDisables": true,
    "reportNeedlessDisables": true,
    "extends": [
      "stylelint-config-standard",
      "@maxmilton/stylelint-config"
    ],
    "ignoreFiles": [
      "**/dist/**",
      "**/node_modules/**"
    ],
    "rules": {
      "import-notation": null,
      "function-no-unknown": null
    }
  }
}
